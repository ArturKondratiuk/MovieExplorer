<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieExplorer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MovieExplorer.Pages"
    Title="MovieExplorer">

    <!-- paths for GoToAsync -->
    <ShellContent
    Title="Home"
    Route="MainPage"
    ContentTemplate="{DataTemplate pages:MainPage}" />

    <ShellContent
    Title="Movies"
    Route="MovieListPage"
    ContentTemplate="{DataTemplate pages:MovieListPage}" />

    <ShellContent
    Title="User Profile"
    Route="UserProfile"
    ContentTemplate="{DataTemplate pages:UserProfile}" />

    <ShellContent
    Title="Settings"
    Route="SettingsPage"
    ContentTemplate="{DataTemplate pages:SettingsPage}" />

</Shell>
