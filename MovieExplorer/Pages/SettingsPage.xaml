<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MovieExplorer.Pages.SettingsPage"
    Title="Settings"
    Padding="20">

    <VerticalStackLayout Spacing="25">

        <!-- dark/light theme -->
        <HorizontalStackLayout Spacing="15">
            <Label Text="Dark Theme" FontSize="18" VerticalOptions="Center" />
            <Switch x:Name="ThemeSwitch" Toggled="OnThemeToggled"/>
        </HorizontalStackLayout>

        <!-- clear history button -->
        <Button
        Text="Clear history"
        Clicked="OnClearHistory"
        FontSize="12"
        Padding="6,4"
        CornerRadius="12"
        BackgroundColor="#FF3B30"
        TextColor="White"
        HorizontalOptions="Start"
        WidthRequest="130"
        HeightRequest="32">
        </Button>

    </VerticalStackLayout>
</ContentPage>